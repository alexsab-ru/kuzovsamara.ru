---
interface Props {
	title?: string,
	descr?: string
}
const { title, descr } = Astro.props;


import { SITE_NAME, SITE_DESCR } from '@/const.js';

import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import Modals from '@/components/Modals.astro';
import UpBtn from '@/components/UpBtn.astro';
---

<!doctype html>
<html lang="ru">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={ descr ?? SITE_DESCR } />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={ Astro.generator } />
		<title>{ title ?? SITE_NAME }</title>
		<script src="../js/app.js"></script>

		<!-- Google Tag Manager -->
		<script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
		new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
		j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
		'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
		})(window,document,'script','dataLayer','GTM-NMDLDB3F');</script>
		<!-- End Google Tag Manager -->
	</head>
	<body class="min-h-screen flex flex-col">
		<!-- Google Tag Manager (noscript) -->
		<noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-NMDLDB3F"
		height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
		<!-- End Google Tag Manager (noscript) -->

		<Header />
		<main class="flex-grow">
			<slot />
		</main>
		<Footer />
		<Modals />
		<UpBtn />
	</body>
</html>
<style is:global lang="scss">
	@import "@/scss/app.scss";
</style>