---
import { Icon } from "astro-icon";
const items = [
	{ icon: "warranty", title: "Гарантия на все виды выполненных кузовных работ" },
	{ icon: "coffee-cup", title: "Для всех клиентов комфортный отдых и уютное кафе" },
	{ icon: "children", title: "В клиентской зоне оборудована детская комната" },
	{ icon: "certified", title: "Сертифицированные специалисты" },
	{ icon: "technical-support", title: "Всегда можно присутствовать при ремонте авто" },
	{ icon: "quality-control", title: "100% оригинальные запчасти" },
	{ icon: "repair", title: "Все работы выполняются на самом современном оборудовании" },
	{ icon: "stock", title: "Четкое объяснение стоимости работ" },
	{ icon: "taxi", title: "Бесплатное такси" },
];
---

{
	items.length ? (
		<section>
			<div class="container">
				<h2 class="mb-8">Выгоднее, чем в гараже!</h2>
				<p class="uppercase text-xl text-center mb-14">
					Преимущества нашего сервисного центра:
				</p>
				<div class="flex justify-center flex-wrap gap-y-10">
					{items.map((item) =>
						item.icon && item.title ? (
							<div class="max-[550px]:w-1/2 w-1/3 md:w-1/4 lg:w-1/5 flex flex-col gap-5 max-[400px]:gap-2 items-center max-[400px]:px-2 px-3 xl:px-5">
								<Icon name={item.icon} class="fill-accent-500 w-20 max-[400px]:w-14" />
								<h3 class="max-[400px]:text-xs text-center">{item.title}</h3>
							</div>
						) : (
							""
						)
					)}
				</div>
			</div>
		</section>
	) : (
		""
	)
}
