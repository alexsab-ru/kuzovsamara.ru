---
import Select from '@/components/Select.astro';
const options = ['ул. Демократическая, 55', 'Южное шоссе, 12, стр. 3'];
---

<section class="text-white z-[1]" style="background-image: url('img/online-bg.jpg');" id="online-calc">
	<div class="absolute inset-0 bg-sky-900/90 z-[-1]"></div>
	<div class="container">
		<h2 class="text-center mb-8">Онлайн расчет</h2>
		<p class="uppercase text-xl text-center mb-10">От локальной покраски до кузовных работ</p>
		<form class="max-w-2xl w-full mx-auto">
			<div class="grid grid-cols-1 min-[600px]:grid-cols-2 gap-5">
				<div class="w-full">
					<input type="text" name="name" class="border-2 border-transparent transition-all focus:border-accent-500 px-4 py-2.5 outline-none w-full text-black" placeholder="Ваше имя">
				</div>
				<div class="w-full">
					<input type="tel" name="phone" class="border-2 border-transparent transition-all focus:border-accent-500 px-4 py-2.5 outline-none w-full text-black" placeholder="+7 (999) 999-99-99*">
					<div class="error-message text-xs text-yellow-300 phone hidden">Введен некорректный номер телефона</div>
				</div>
				
				<Select 
					name="salon" 
					placeholder="Выберите салон" 
					options={options} 
				/>

				<div class="w-full">
					<input type="text" name="vin" class="border-2 border-transparent transition-all focus:border-accent-500 px-4 py-2.5 outline-none w-full text-black" placeholder="VIN">
				</div>
				<div class="min-[600px]:col-span-2">
					<div class="dropzone file-upload p-5 bg-white border-2 border-black border-dashed focus:border-accent-500 h-auto cursor-pointer text-black" tabindex="-1"></div>
					<div class="error-message text-yellow-300 hidden">ERROR</div>
					<div class="success-message text-green-300 hidden">SUCCESS</div>
				</div>
				<div class="min-[600px]:col-span-2">
					<label class="cursor-pointer flex items-center flex-wrap text-sm mb-5">
						<input type="checkbox" name="agree" class="absolute w-0 h-0 opacity-0 invisible">
						<div class="flex flex-wrap gap-x-2 text-white/80">
							<span class="fake-checkbox-white"></span>
							<span>Я согласен на</span>
							<a href="/privacy-policy.pdf" class="text-white/80 underline transition-all hover:no-underline" target="_blank">обработку персональных данных</a>
						</div>
						<div class="error-message text-xs text-yellow-300 hidden w-full agree">
							Чтобы продолжить, установите флажок
						</div>
					</label>
					<input type="submit" class="btn white" value="Отправить">
				</div>
			</div>
		</form>
	</div>
</section>